@using B1809531_EShop_MVC6.Helpers;
@model IEnumerable<CartDetailModel>
@{
    ViewData["Title"] = "Đặt hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @{
                    if (Model.Count() > 0)
                    {
                        <div class="shoping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="shoping__product">Sản phẩm</th>
                                        <th></th>
                                        <th>Đơn giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{

                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="/@(GetPath.ProductImage + item.Product.Productimages.First().Productimageurl)" class="img-150">
                                                </td>
                                                <td class="shoping__cart__item">
                                                    <h5 class="ml-2">@item.Product.Productname</h5>
                                                    <input type="text" value="@item.Cartdetailid" hidden>
                                                </td>
                                                <td class="shoping__cart__price">
                                                    @String.Format("{0:n0}", item.Product.Productsaleprice)
                                                </td>
                                                @{
                                                    if (item.Product.Productinacitve == false)
                                                    {
                                                        <td class="shoping__cart__quantity">
                                                            <p class="text-danger">Sản phẩm ngừng kinh doanh</p>
                                                            <input type="text" value="@item.Cartdetailquantity" disabled>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td class="shoping__cart__quantity">
                                                            <input type="text" value="@item.Product.Productquantity" hidden>
                                                            <div class="quantity">
                                                                <div class="pro-qty">

                                                                    <input type="text" value="@item.Cartdetailquantity" disabled>

                                                                </div>
                                                            </div>
                                                        </td>
                                                    }
                                                }
                                                <td class="shoping__cart__total">
                                                    @String.Format("{0:n0}",item.Product.Productsaleprice * item.Cartdetailquantity)
                                                </td>

                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    }

                }

            </div>
        </div>

    </div>
</section>

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Thông tin đặt hàng</h4>
            <form asp-action="Checkout" method="post">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Họ tên<span>*</span></p>
                                    <input type="text" value="@ViewBag.Infor.Item1" name="customerName">
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Số điện thoại<span>*</span></p>
                                    <input type="text" value="@ViewBag.Infor.Item2" name="customerPhone">
                                </div>
                            </div>

                        </div>

                        <div class="checkout__input">
                            <p>Địa chỉ<span>*</span></p>
                            <input type="text" placeholder="Số nhà, tên đường" value="@ViewBag.Infor.Item3"
                                   class="checkout__input__add"name="customerAddress">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">

                        <div class="shoping__checkout mt-0">
                            <h5>Tổng kết giỏ hàng</h5>
                            <ul>
                                <li>Tổng số lượng: <span>@Model.Sum(n => n.Cartdetailquantity)</span></li>
                                <li>Tổng số tiền: <span>@String.Format("{0:n0}", Model.Sum(n => n.Cartdetailquantity*n.Product.Productsaleprice)) VNĐ</span></li>
                            </ul>
                            <button type="submit" class="btn btn-success w-100" >Đặt hàng</button>
                        </div>
                        <div class="text-center shoping__cart__btns mt-4">
                            <a asp-action="GetProductList" asp-controller="Home" class="primary-btn cart-btn">Mua sắm tiếp</a>
                        </div>


                    </div>
                </div>

            </form>
        </div>


    </div>
</section>
<!-- Checkout Section End -->
