@using B1809531_EShop_MVC6.Helpers;
@model IEnumerable<CartDetailModel>

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @{
                    if (Model.Count() > 0)
                    {
                        <div class="shoping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="shoping__product">Sản phẩm</th>
                                        <th></th>
                                        <th>Đơn giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="/@(GetPath.ProductImage + item.Product.Productimages.First().Productimageurl)" class="img-150">
                                                </td>
                                                <td class="shoping__cart__item">
                                                    <h5 class="ml-2">@item.Product.Productname</h5>
                                                    <input type="text" value="@item.Cartdetailid" hidden id="cartid-@i">
                                                </td>
                                                <td class="shoping__cart__price">
                                                    @String.Format("{0:n0}", item.Product.Productsaleprice)
                                                </td>
                                                @{
                                                    if (item.Product.Productinacitve == false)
                                                    {
                                                        <td class="shoping__cart__quantity">
                                                            <p class="text-danger">Sản phẩm ngừng kinh doanh</p>
                                                            <input type="text" value="@item.Cartdetailquantity" disabled>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td class="shoping__cart__quantity">
                                                            <input type="text" value="@item.Product.Productquantity" hidden id="productquatity-@i">
                                                            <div class="quantity">
                                                                <div class="pro-qty">
                                                                    <span class="dec qtybtn" data-cartdetail="@item.Cartdetailid">-</span>
                                                                    <input type="text" value="@item.Cartdetailquantity" id="cartdetailquantity-@i">
                                                                    <span class="inc qtybtn" data-cartdetail="@item.Cartdetailid">+</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    }
                                                }
                                                <td class="shoping__cart__total">
                                                    @String.Format("{0:n0}",item.Product.Productsaleprice * item.Cartdetailquantity)
                                                </td>
                                                <td class="shoping__cart__item__close">
                                                    <span class="icon_close" data-cartdetail="@item.Cartdetailid"></span>
                                                </td>
                                            </tr>

                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="shoping__cart__btns">
                                    <a asp-action="GetProductList" asp-controller="Home" class="primary-btn cart-btn">Mua sắm tiếp</a>

                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="shoping__checkout mt-0">
                                    <h5>Tổng kết giỏ hàng</h5>
                                    <ul>
                                        <li>Tổng số lượng: <span>@Model.Sum(n => n.Cartdetailquantity)</span></li>
                                        <li>Tổng số tiền: <span>@String.Format("{0:n0}", Model.Sum(n => n.Cartdetailquantity*n.Product.Productsaleprice)) VNĐ</span></li>
                                    </ul>
                                    <a href="#" class="primary-btn">Thanh toán</a>
                                </div>
                            </div>

                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <img src="/@(GetPath.BannerImage+"/empty-cart.png")" />
                        </div>
                        <div class="text-center shoping__cart__btns">
                            <a asp-action="GetProductList" asp-controller="Home" class="primary-btn cart-btn">Mua sắm tiếp</a>
                        </div>
                    }
                }

            </div>
        </div>

    </div>
</section>