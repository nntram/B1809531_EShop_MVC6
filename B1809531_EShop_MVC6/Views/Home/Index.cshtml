@using B1809531_EShop_MVC6.Helpers;

@{
    ViewData["Title"] = "Trang chủ";
    var categories = ViewBag.Categories as IEnumerable<CategoryModel>;
    var brands = ViewBag.Brands as IEnumerable<BrandModel>;
    var products = ViewBag.Products as IEnumerable<ProductModel>;
}

<div class="hero__item set-bg"
     data-setbg="@GetPath.BannerImage/different-makeup-cosmetics-brushes-white-background_23-2147878833.webp
">
    <div class="hero__text__container">
        <div class="hero__text">
            <span>Mỹ phẩm cao cấp</span>
            <h2>Đảm bảo sản phẩm<br> chính hãng</h2>
            <p>Miễn phí vận chuyển cho đơn hàng từ 250,000 VNĐ</p>
            <a href="@Url.Action("GetProductList")" class="primary-btn">Mua ngay</a>
        </div>
    </div>
</div>

<div class="section-title">
    <h2>Danh mục sản phẩm</h2>
</div>
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @{
                    if (categories != null && categories.Count() > 0)
                    {
                        foreach (var item in categories)
                        {
                            <div class="col-lg-3">
                                <div class="categories__item">
                                    <img src="/@(GetPath.CategoryImage+item.Categoryimage)"
                                 class="img-fluid img-thumbnail img-150" />
                                    <h5>
                                        <a href="@Url.Action("GetProductList", "Home", new {category = item.Categoryid})">
                                            @item.Categoryname
                                        </a>
                                    </h5>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->

<div class="section-title">
    <h2>Các thương hiệu</h2>
</div>
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @{
                    if (brands != null && brands.Count() > 0)
                    {
                        foreach (var item in brands)
                        {
                            <div class="col-lg-3">
                                <div class="categories__item">
                                    <img src="/@(GetPath.BrandImage+item.Brandimage)"
                                 class="img-fluid img-thumbnail img-150" />
                                    <h5>
                                        <a href="@Url.Action("GetProductList", "Home", new {brand = item.Brandid})">
                                            @item.Brandname
                                        </a>
                                    </h5>
                                </div>
                            </div>
                        }
                    }
                }


            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>

            </div>
        </div>
        <div class="row featured__filter">
            @{
                if (products != null && products.Count() > 0)
                {
                    foreach (var item in products)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="featured__item">
                                <div class="featured__item__pic">
                                    <ul class="featured__item__pic__hover">
                                        <li><a href="@Url.Action("GetProductDetails", "Home", new {id = item.Productid})"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                    <img src="/@(GetPath.ProductImage+item.Productimages.First().Productimageurl)"
                                 class="img-fluid" />
                                </div>

                                <div class="featured__item__text">
                                    <h6 class="name-overflow">
                                        <i>
                                            <sub class="fa fa-heart-o text-danger"> Hot </sub>
                                            <a href="@Url.Action("GetProductDetails", "Home", new {id = item.Productid})"> @item.Productname</a>
                                        </i>
                                    </h6>
                                    <h5> @String.Format("{0:n0}", item.Productsaleprice) VNĐ</h5>

                                    @if (item.Productsaleprice != item.Productprice)
                                    {
                                        <h6> <s>@String.Format("{0:n0}", item.Productprice) VNĐ </s></h6>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</section>

<div class="d-flex justify-content-center mb-4">
    <a class="btn btn-outline-success" href="@Url.Action("GetProductList")">Xem tất cả sản phẩm</a>
</div>
