@using B1809531_EShop_MVC6.Helpers
@using X.PagedList;
@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Danh sách các sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    SelectList brandList = ViewBag.Brands;
    SelectList categoryList = ViewBag.Categories;
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="p-1">
        <ul class="nav nav-tabs" id="product-nav">
            <li class="nav-item ">
                <a class="nav-link m-0 font-weight-bold active" id="getAll" href="#getAll">
                    Tất cả sản phẩm
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link m-0 font-weight-bold" id="getOutOfStock" href="#getOutOfStock">
                    Sản phẩm cần nhập thêm
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link m-0 font-weight-bold" id="getHot" href="#getHot">
                    Sản phẩm hot
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link m-0 font-weight-bold" id="getNotInActive" href="#getNotInActive">
                    Sản phẩm ngừng kinh doanh
                </a>
            </li>
        </ul>
    </div>

    <div class="card-body">
        <div class="table-responsive">

            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row pb-3">
                    <div class="col-sm-12 col-md-6">
                        <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
                    </div>


                </div>

                <div class="row pb-3">
                    <div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="dataTable_length">
                            <label class="font-weight-bold">
                                Thương hiệu
                            </label>
                            <label>
                                <select name="brand" id="brand" aria-controls="dataTable" asp-items="brandList" class="custom-select custom-select-sm form-control form-control-sm">
                                    <option value="" selected>Tất cả</option>
                                </select>

                            </label>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="dataTable_length">
                            <label class="font-weight-bold">
                                Loại sản phẩm
                            </label>
                            <label>
                                <select name="category" id="category" asp-items="categoryList" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
                                    <option value="" selected>Tất cả</option>
                                </select>

                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" id="listContainer">
                        <partial name="_listPartial" model="Model" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin_assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin_assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin_assets/js/product-filter.js"></script>
}

