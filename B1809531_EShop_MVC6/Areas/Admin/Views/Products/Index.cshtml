@using B1809531_EShop_MVC6.Helpers
@using X.PagedList;
@model IPagedList<ProductModel>
@{
    ViewData["Title"] = "Danh sách các sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    SelectList brandList = ViewBag.Brands;
    SelectList categoryList = ViewBag.Categories;
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row pb-3">
                    <div class="col-sm-12 col-md-6">
                        <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
                    </div>

                    <div class="col-sm-12 col-md-5">
                        <div id="dataTable_filter" class="dataTables_filter">
                            <label class="font-weight-bold">
                                Tìm kiếm:
                            </label>
                            <div class="input-group">
                                <input type="text" id="keyword" class="form-control small" placeholder="Nhập tên sản phẩm..." aria-controls="dataTable">                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="dataTable_length">
                            <label class="font-weight-bold">
                                Thương hiệu
                            </label>
                            <label>
                                <select name="brand" id = "brand" aria-controls="dataTable" asp-items="brandList" class="custom-select custom-select-sm form-control form-control-sm">
                                    <option value="" selected>Tất cả</option>                                    
                                </select>

                            </label>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="dataTable_length">
                            <label class="font-weight-bold">
                                Loại sản phẩm
                            </label>
                            <label>
                                <select name="category" id= "category" asp-items="categoryList" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
                                    <option value="" selected>Tất cả</option>                               
                                </select>

                            </label>
                        </div>
                    </div>
                </div>
                <div class="row" id="listContainer">
                    <partial name="_listPartial" model="Model" />
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            $("#keyword").keyup(function(){
                var strkeyword = $("#keyword").val()
                var brandId = $("#brand").children(":selected").attr('value')
                var categoryId = $("#category").children(":selected").attr('value')
                $.ajax({
                    url: "/Admin/Products/GetOnePage",
                    datatype: "json",
                    type: "GET",
                    data: {
                        search: strkeyword,
                        brand: brandId,
                        category: categoryId
                    },
                    async: true, 
                    success: function (results){
                        $("#listContainer").html("")
                        $("#listContainer").html(results)
                    },
                    error: function (xhr){
                        alert('error')
                    }
                })
            })

            $("#brand").change(function () {
                var strkeyword = $("#keyword").val()
                var brandId = $("#brand").children(":selected").attr('value')
                var categoryId = $("#category").children(":selected").attr('value')
                $.ajax({
                    url: "/Admin/Products/GetOnePage",
                    datatype: "json",
                    type: "GET",
                    data: {
                        search: strkeyword,
                        brand: brandId,
                        category: categoryId
                    },
                    async: true,
                    success: function (results) {
                        $("#listContainer").html("")
                        $("#listContainer").html(results)
                    },
                    error: function (xhr) {
                        alert('error')
                    }
                })
            })

            $("#category").change(function () {
                var strkeyword = $("#keyword").val()
                var brandId = $("#brand").children(":selected").attr('value')
                var categoryId = $("#category").children(":selected").attr('value')
                $.ajax({
                    url: "/Admin/Products/GetOnePage",
                    datatype: "json",
                    type: "GET",
                    data: {
                        search: strkeyword,
                        brand: brandId,
                        category: categoryId
                    },
                    async: true,
                    success: function (results) {
                        $("#listContainer").html("")
                        $("#listContainer").html(results)
                    },
                    error: function (xhr) {
                        alert('error')
                    }
                })
            })

        })
    </script>
}
