@using B1809531_EShop_MVC6.Helpers
@model B1809531_EShop_MVC6.Models.ProductUpdateModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    SelectList brandList = ViewBag.Brands;
    SelectList categoryList = ViewBag.Categories;
}

<div class="row d-flex justify-content-center">
    <div class="col-lg-8">
        <!-- Default Card Example -->
        <div class="card">
            <div class="card-header py-3">
                <h1 class="text-primary">Chỉnh sửa</h1>
                <h4 class="text-primary">Sản phẩm</h4>
            </div>

            <div class="card-body">
                <div class="form-group">
                    <a class="btn btn-outline-info"
                       asp-controller="Productimages" asp-action="Index" asp-route-id="@Model.Productid">
                       <i class="fa fa-image"></i>
                        Thay đổi hình ảnh sản phẩm
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
                </div>

                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group btn btn-outline-info">
                        <!-- Default switch -->
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" asp-for="Productinacitve">
                            <label class="custom-control-label" for="Productinacitve">Sản phẩm đang kinh doanh</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input asp-for="Productid" class="d-none" required />
                        <label class="control-label"> Tên: </label>
                        <input asp-for="Productname" class="form-control w-75" required />
                        <span asp-validation-for="Productname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            Thương hiệu:
                        </label>

                        <select asp-for="Brandid" aria-controls="dataTable" asp-items="brandList"
                                class="custom-select w-50 d-block">
                        </select>

                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            Loại sản phẩm:
                        </label>

                        <select asp-for="Categoryid" asp-items="categoryList" aria-controls="dataTable"
                                class="custom-select w-50 d-block">
                        </select>

                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            Số lượng:
                        </label>
                        <input asp-for="Productquantity" class="form-control w-50" step="1" min="0" required />
                        <span asp-validation-for="Productquantity" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            Giá niêm yết:
                        </label>
                        <input asp-for="Productprice" class="form-control w-50" step="1" min="0" required />
                        <p>Thành tiền: <b id="price"></b> <i> (Đơn vị: VNĐ)</i></p>
                        <span asp-validation-for="Productprice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            Giá giảm:
                        </label>
                        <input asp-for="Productsaleprice" class="form-control w-50" step="1" min="0" required />
                        <p>Thành tiền: <b id="salePrice"></b> <i> (Đơn vị: VNĐ)</i></p>
                        <span asp-validation-for="Productsaleprice" class="text-danger"></span>

                    </div>

                    <div class="form-group btn btn-outline-warning">
                        <!-- Default switch -->
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" asp-for="Productishot">
                            <label class="custom-control-label" for="Productishot">Sản phẩm đang hot</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            Mô tả sản phẩm:
                        </label>
                        <textarea asp-for="Productdescribe">
                        </textarea>
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <div>
                            <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin_assets/js/price-display.js"></script>
    <script src="~/admin_assets/js/ckeditor.js"></script>
    <script src="~/admin_assets/js/ckeditor-setup.js"></script>
}
