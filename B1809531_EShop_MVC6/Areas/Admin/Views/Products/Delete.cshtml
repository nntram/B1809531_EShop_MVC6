@using B1809531_EShop_MVC6.Helpers
@model B1809531_EShop_MVC6.Models.BrandModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xác nhận xóa</h1>
<div>
    <h4>Thương hiệu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brandname)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @{
                var datetime = DatetimeHelpers.UnixTimeStampToDateTime
                (Model.Brandcreateddate.HasValue ? Model.Brandcreateddate.Value : 0).ToString();
            }
            @(datetime)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brandimage)
        </dd>

        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <img src="/@(GetPath.BrandImage+ Model.Brandimage)" class="img-details" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Brandid" />
        <div>
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
        </div>
    </form>
</div>
