@using B1809531_EShop_MVC6.Helpers;
@model IEnumerable<ProductImageModel>

@if (Model.Count() > 0)
{
    var index = 0;
    foreach (var item in Model)
    {       
        <tr>
            <td>
                <img src="/@(GetPath.ProductImage+ item.Productimageurl)" class="img-fluid img-thumbnail img-details" />
            </td>
            <td class="right">
                <a href="/@(GetPath.ProductImage+ item.Productimageurl)" class="btn btn-info" target="_blank">Chi tiết</a>       
                <a class="btn btn-danger" id="@("aClick" + index)" 
            data-img = @item.Productimageid>
                    Xóa 
                </a>                              
            </td>
        </tr>
        index++;
    }
}
