@using B1809531_EShop_MVC6.Helpers
@model IEnumerable<B1809531_EShop_MVC6.Models.CategoryModel>

@{
    ViewData["Title"] = "Danh sách các loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row pb-3">
                    <div class="col-sm-12 col-md-6">

                        <a asp-action="Create" class="btn btn-primary">Thêm mới</a>

                    </div>

                </div>
             
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered table-hover dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>
                                        Tên
                                    </th>
                                    <th>
                                        Ngày tạo
                                    </th>
                                    <th>
                                        Hình ảnh
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categoryname)
                                        </td>
                                        <td>
                                            @{var datetime = DatetimeHelpers.UnixTimeStampToDateTime
                                                                    (item.Categorycreateddate.HasValue?item.Categorycreateddate.Value:0).ToString();}
                                            @(datetime)                                        
                                        </td>
                                        <td>
                                           <img src="/@(GetPath.CategoryImage+ item.Categoryimage)" class="list-image"/>
                                        </td>
                                        <td class="right">                                          
                                            <a asp-action="Details" asp-route-id="@item.Categoryid" class="btn btn-info">Chi tiết</a>
                                             <a asp-action="Edit" asp-route-id="@item.Categoryid" class="btn btn-warning">Chỉnh sửa</a>
                                            <a asp-action="Delete" asp-route-id="@item.Categoryid" class="btn btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>
